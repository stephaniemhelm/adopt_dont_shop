<h1>New Application</h1>

<%= form_with url: '/applicatons', method: :post, local: true do |form| %>
  <%= form.label :name %>
  <%= form.text_field :name %><br><br>
  <%= form.label :street_address %>
  <%= form.text_field :street_address %><br><br>
  <%= form.label :city %>
  <%= form.text_field :city %><br><br>
  <%= form.label :state %>
  <%= form.text_field :state %><br><br>
  <%= form.label :zip_code %>
  <%= form.number_field :zip_code %><br><br>
  <%= form.label :description %>
  <%= form.text_field :description %><br><br>
  
<br>
<%= form.submit "Submit Application" %>
<% end %>
