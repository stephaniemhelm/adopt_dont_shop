<h1><%= @application.name %></h1>


  <h3><b>Name: <%= @application.name %><br></h3>
  <p><b>Street Address: <%= @application.street_address %><br>
  <p><b>City: <%= @application.city %><br>
  <p><b>State: <%= @application.state %><br>
  <p><b>Zip Code: <%= @application.zip_code %><br>
  <p><b>Description: <%= @application.description %><br>
  <p><b>Status: <%= @application.status %><br>


  <p><b>Pets: <% @specific_pets.each do |pet| %>
    <h3><b><%= link_to pet.name, "/pets/#{pet.id}" %></h3>
    <% end %>

<h3>Add a Pet to this application</h3>
  <%= form_with url: "/pets", method: :get, local: true do |f| %>
  <%= f.label :search %>
  <%= f.text_field :search %>
  <%= f.submit "Search" %>
  <% end %>
  <br>
