<h1><%= @application.name %></h1>


  <h3><b>Name: <%= @application.name %><br></h3>
  <p><b>Street Address: <%= @application.street_address %><br>
  <p><b>City: <%= @application.city %><br>
  <p><b>State: <%= @application.state %><br>
  <p><b>Zip Code: <%= @application.zip_code %><br>
  <p><b>Description: <%= @application.description %><br>
  <p><b>Status: <%= @application.status %><br>




<h3>Add a Pet to this application</h3>
  <%= form_with url: "/applications/#{@application.id}", method: :get, local: true do |f| %>
  <%= f.label :search %>
  <%= f.text_field :search %>
  <%= f.submit "Search" %>
  <% end %>
  <br>

<% @search_results.each do |pet| %>
  <h3>Search Results</h3>
  <h3><%= pet.name %></h3>
  <p>Age: <%= pet.age %></p>
  <p>Breed: <%= pet.breed %></p>
  <p>Adoptable: </p>
  <p>You can find <%= pet.name %> at <%= pet.shelter_name %>!</p>
  <%= link_to "Edit #{pet.name}", "/pets/#{pet.id}/edit" %>
  <%= link_to "Delete #{pet.name}", "/pets/#{pet.id}", method: :delete %>
<% end %>
